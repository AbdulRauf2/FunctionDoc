# Environment Configuration Template
# Copy this file to .env and fill in your values

# RAGflow Configuration
RAGFLOW_HOST=localhost
RAGFLOW_PORT=80
RAGFLOW_API_KEY=your-ragflow-api-key-here

# Langflow Configuration
LANGFLOW_HOST=localhost
LANGFLOW_PORT=7860
LANGFLOW_FLOW_ID=your-flow-id-here

# LLM Provider Configuration (choose one or configure multiple)
# OpenAI
OPENAI_API_KEY=your-openai-key-here
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local Model (if using)
LOCAL_MODEL_HOST=localhost
LOCAL_MODEL_PORT=8000

# Application Settings
LOG_LEVEL=INFO
OUTPUT_FORMAT=markdown
MAX_FILES_PER_BATCH=10

# Knowledge Base Settings
KB_DATASET_NAME=pseudocode-examples
KB_CHUNK_SIZE=512
KB_SIMILARITY_THRESHOLD=0.7

# Processing Settings
TEMPERATURE=0.3
MAX_TOKENS=4096
TIMEOUT_SECONDS=120

# Output Settings
OUTPUT_DIR=./outputs
INCLUDE_TOC=true
INCLUDE_EXAMPLES=true

# Development Settings
DEBUG=false
VERBOSE=false
